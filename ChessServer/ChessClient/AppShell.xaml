<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ChessClient.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:ChessClient"
    xmlns:views="clr-namespace:ChessClient.Views"
    Shell.FlyoutBehavior="Flyout"
    Shell.NavBarIsVisible="False"
    Title="ChessClient">
    
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent Route="AuthPage" ContentTemplate="{DataTemplate views:AuthPage}" />
    <!-- Регистрируем страницу игры -->
    <ShellContent Route="GamePage" ContentTemplate="{DataTemplate views:GamePage}"/>
</Shell>
